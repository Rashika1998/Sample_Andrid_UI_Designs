<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img0013"
    tools:context=".ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-2dp"
        android:layout_marginRight="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_pic"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:src="@drawable/profile"
                />



            <TextView
                android:id="@+id/user_full_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profile name"
                android:layout_below="@+id/user_profile_pic"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="username"
                android:layout_below="@+id/user_full_name"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/user_profile_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIO"
                android:layout_below="@+id/username"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/user_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Country"
                android:layout_below="@+id/user_profile_bio"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/user_any_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Any status"
                android:layout_below="@+id/user_country"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/user_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Gender"
                android:layout_below="@+id/user_any_status"
                android:layout_marginTop="2dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/user_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Contacts"
                android:layout_below="@+id/user_gender"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:linksClickable="true"
                android:autoLink="all"
                android:textColorLink="#bcb535"
                android:textStyle="normal"
                android:padding="10dp"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/user_profile_edit_button"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_below="@+id/user_contacts"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="Edit"
                android:background="@drawable/button"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/text_01"
                android:layout_width="220dp"
                android:layout_height="50dp"
                android:layout_below="@+id/user_profile_edit_button"
                android:layout_centerHorizontal="true"
                android:text="To edit your profile, click the EDIT button here."
                android:textColor="@android:color/white"
                android:layout_marginTop="20dp"
                android:textSize="18dp"/>

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>