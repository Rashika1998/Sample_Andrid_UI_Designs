<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img004"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="-2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_marginTop="0dp"
                android:text="GameAppex"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/f1_text"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:text="Developed By GameAppex Community"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:textAlignment="viewEnd"
                android:textStyle="normal"
                android:layout_below="@+id/company_name"
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif"/>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/welcome_register"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/f1_text"
                android:layout_marginTop="30dp"
                android:src="@drawable/company_logo2"
                />


            <EditText
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/welcome_register"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/email"
                android:ems="10"
                android:hint="E mail...."
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="textEmailAddress"
                android:padding="4dp" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/password"
                android:ems="10"
                android:hint="Password....."
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:padding="4dp" />

            <EditText
                android:id="@+id/register_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_password"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputs"
                android:drawableLeft="@drawable/password"
                android:ems="10"
                android:hint="Confirm password..."
                android:textColorHint="@color/colorPrimaryDark"
                android:inputType="textPassword"
                android:padding="4dp" />

            <Button
                android:id="@+id/register_create_account"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_below="@+id/register_confirm_password"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/button"
                android:padding="8dp"
                android:text="Create Account"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/text07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_create_account"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:textAlignment="center"
                android:textStyle="normal"
                android:text="Before you register you have to aggrey with our terms and conditions go through here and see  "
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/terms_button"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_below="@+id/text07"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:textStyle="normal"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="Terms and conditions"
                android:gravity="center_horizontal" />



            <TextView
                android:id="@+id/text08"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_below="@+id/terms_button"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>