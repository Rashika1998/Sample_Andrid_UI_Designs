<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img0014"
    tools:context=".EditProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/company_name"
                android:layout_width="wrap_content"
                android:layout_height="70sp"
                android:layout_marginTop="0dp"
                android:text="GameAppex"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textColor="@android:color/white"
                android:textSize="50sp"
                android:textStyle="bold"
                android:padding="0dp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/f1_text"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="5dp"
                android:text="Developed By GameAppex Community"
                android:textSize="16dp"
                android:textColor="@android:color/white"
                android:textAlignment="viewEnd"
                android:textStyle="normal"
                android:layout_below="@+id/company_name"
                android:gravity="end"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/settings_profile_image"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/f1_text"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile"/>

            <EditText
                android:id="@+id/bio_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_image"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/inputs"
                android:hint="Bio About You Or Your Company"
                android:textAlignment="center"
                android:padding="30dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/username_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bio_setting"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/inputs"
                android:hint="Username"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <EditText
                android:id="@+id/settings_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/username_setting"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Profile name"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <EditText
                android:id="@+id/settings_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_profile_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Country "
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <EditText
                android:id="@+id/settings_any_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_country"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Any status about you"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                />

            <EditText
                android:id="@+id/settings_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_any_status"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="User Gender"
                android:textAlignment="center"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <EditText
                android:id="@+id/settings_relationship_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/settings_gender"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/inputs"
                android:hint="Contacts numbers or links ex: Whatsapp Or facebook"
                android:textAlignment="center"
                android:padding="12dp"
                android:textColor="@android:color/background_dark"
                android:textSize="20sp"
                android:textStyle="normal"
                android:gravity="center_horizontal" />

            <Button
                android:id="@+id/update_account_settings_buttons"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_below="@+id/settings_relationship_status"
                android:text="Update Account Details"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="16sp"
                android:textStyle="normal"
                android:textAllCaps="false"
                />

            <TextView
                android:id="@+id/topic_catalogue"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@+id/update_account_settings_buttons"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="15dp"
                android:text="Terms and conditions"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:textColor="@android:color/darker_gray"
                android:gravity="center_horizontal"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/topics"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topic_catalogue"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="4dp"
                android:text="Before you change your profile details you have to change
your profile details according to our terms."
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_horizontal"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/text"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_below="@+id/topics"
                android:layout_centerHorizontal="true"
                />



        </RelativeLayout>


    </ScrollView>

</RelativeLayout>