<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img0011"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/f0_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Developed By"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="normal"
                android:layout_margin="5dp"/>

            <TextView
                android:id="@+id/f1_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GameAppex"
                android:textStyle="normal"
                android:textSize="40sp"
                android:layout_below="@+id/f0_text"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/f0_img"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/f1_text"
                android:layout_marginTop="30dp"
                android:src="@drawable/company_logo2"
                />


            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Sign In Page"
                android:textStyle="normal"
                android:textSize="16sp"
                android:layout_below="@+id/f0_img"
                android:background="@drawable/button"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="50dp"
                android:textColor="@android:color/darker_gray"/>

            <Button
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Sign Up Page"
                android:textStyle="normal"
                android:textSize="16sp"
                android:background="@drawable/button"
                android:layout_below="@+id/login_btn"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/darker_gray"/>


            <Button
                android:id="@+id/profile_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visit Your profile"
                android:textStyle="normal"
                android:textSize="16sp"
                android:background="@drawable/button"
                android:layout_below="@+id/signup_btn"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/darker_gray"/>


            <Button
                android:id="@+id/profile_edit_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Your profile"
                android:textStyle="normal"
                android:textSize="16sp"
                android:background="@drawable/button"
                android:layout_below="@+id/profile_btn"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textColor="@android:color/darker_gray"/>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>